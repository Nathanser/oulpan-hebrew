<section class="card">
  <h1>Choisir ma session</h1>

  <form class="form" action="/train" method="get">
    <label>Mode
      <select name="mode">
        <option value="flashcards" selected>Flashcards QCM</option>
        <option value="quiz">Saisie libre (quiz)</option>
      </select>
    </label>

    <label>Thème
      <select name="theme_id">
        <option value="">Tous les thèmes</option>
        <% themes.forEach(t => { %>
          <option value="<%= t.id %>"><%= t.name %></option>
        <% }) %>
      </select>
    </label>

    <label>Portée
      <select name="scope">
        <option value="all" selected>Global + mes thèmes</option>
        <option value="global">Thèmes globaux seulement</option>
        <option value="mine">Mes thèmes seulement</option>
      </select>
    </label>

    <label>Mode de révision
      <select name="rev_mode">
        <option value="weak" selected>Mots faibles / non maîtrisés</option>
        <option value="new">Nouveaux mots</option>
        <option value="favorites">Favoris</option>
        <option value="random">Aléatoire</option>
      </select>
    </label>

    <label>Difficulté
      <select name="difficulty">
        <option value="">Toutes</option>
        <option value="1">Facile</option>
        <option value="2">Moyen</option>
        <option value="3">Difficile</option>
      </select>
    </label>

    <label>Nombre de mots
      <select name="remaining">
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="15">15</option>
        <option value="20">20</option>
        <option value="50">50</option>
      </select>
    </label>
    <input type="hidden" name="total" value="10">

    <button type="submit">Démarrer</button>
  </form>
</section>
