<section>
  <h1>Admin - Tableau de bord</h1>

  <div class="grid">
    <div class="card">
      <h2>Utilisateurs</h2>
      <p><strong><%= userCount %></strong> comptes</p>
      <a class="btn" href="/admin/users">Gérer les utilisateurs</a>
    </div>

    <div class="card">
      <h2>Mots</h2>
      <p><strong><%= wordCount %></strong> entrées</p>
      <a class="btn" href="/admin/words">Gérer les mots</a>
