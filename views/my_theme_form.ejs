<section class="card">
  <h1>
    <%= theme ? 'Modifier le thème' : 'Ajouter un thème' %>
  </h1>

  <form method="post" action="<%= action %>" class="form">
    <label>Nom
      <input type="text" name="name" value="<%= theme ? theme.name : '' %>" required />
    </label>

    <button type="submit">
      <%= theme ? 'Enregistrer' : 'Créer' %>
    </button>
  </form>
</section>
